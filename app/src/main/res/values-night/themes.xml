<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SplishSplash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Status bar & Nav bar color. -->
        <item name="android:statusBarColor" >@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
        <item name="backgroundColor">@android:color/white</item>
        <item name="android:background">@android:color/white</item>
        <item name="colorOnBackground">@color/colorPrimaryDark</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorAccent</item>

    </style>

    <style name="Theme.SplishSplash.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>