<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/dimen_8dp"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/iv_item"
            android:layout_margin="@dimen/dimen_8dp"
            tools:src="@tools:sample/backgrounds/scenic"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="250dp"
            tools:ignore="ContentDescription" />

    <TextView
            app:layout_constraintTop_toBottomOf="@id/iv_item"
            android:id="@+id/tv_item"
            app:layout_constraintBottom_toTopOf="@id/btn_action"
            android:textAlignment="center"
            android:padding="@dimen/dimen_20dp"
            android:layout_margin="@dimen/dimen_8dp"
            tools:text="@string/msg_no_data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:layout_height="wrap_content" />

    <Button
            android:id="@+id/btn_action"
            android:textColor="@android:color/white"
            android:background="@drawable/button_action_item"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginHorizontal="@dimen/dimen_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/button_to_explore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item"
            android:layout_width="wrap_content"
            android:paddingHorizontal="@dimen/dimen_20dp"
            android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>